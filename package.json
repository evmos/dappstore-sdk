{
  "name": "dappstore-sdk",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:setup-cli": "npm link",
    "release": "bun run build && changeset publish",
    "changeset": "changeset",
    "changeset:snapshot": "changeset version --snapshot"
  },
  "devDependencies": {
    "@types/bun": "^1.0.4",
    "@types/node": "^20.11.19",
    "autoprefixer": "^10.4.17",
    "knip": "^5.0.1",
    "postcss": "^8.4.35",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.1",
    "turbo": "latest",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "@evmos/utils": "workspace:*"
  }
}
